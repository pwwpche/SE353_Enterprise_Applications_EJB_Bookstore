<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entity.AuthorEntity" table="author" schema="" catalog="reg" optimistic-lock="version">
        <id name="authorname">
            <column name="authorname" sql-type="varchar" length="20" not-null="true"/>
        </id>
        <property name="nation">
            <column name="nation" sql-type="varchar" length="20"/>
        </property>

    </class>
</hibernate-mapping>